<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.wenzhencn.cmsseed.system.mapper.GroupMapper">

	<delete id="clearUsersFromGroup">
		DELETE FROM sys_r_user_group WHERE group_id = #{groupId}
	</delete>

	<select id="countGroupUsersRels" resultType="java.lang.Long">
		SELECT user_id FROM sys_r_user_group WHERE group_id = #{groupId} AND user_id IN
		<foreach collection="userIds" item="userId" open="(" close=")" separator=",">#{userId}</foreach>
	</select>

	<select id="countUserGroupsRels" resultType="java.lang.Long">
		SELECT group_id FROM sys_r_user_group WHERE user_id = #{userId} AND group_id IN
		<foreach collection="groupIds" item="groupId" open="(" close=")" separator=",">#{groupId}</foreach>
	</select>

	<insert id="addUsersToGroup">
		INSERT INTO sys_r_user_group (group_id, user_id) VALUES
		<foreach collection="userIds" item="userId" separator=",">(#{groupId}, #{userId})</foreach>
	</insert>

	<insert id="addUserToGroups">
		INSERT INTO sys_r_user_group (group_id, user_id) VALUES
		<foreach collection="groupIds" item="groupId" separator=",">(#{groupId}, #{userId})</foreach>
	</insert>

</mapper>

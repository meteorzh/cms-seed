<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!-- 不引入Spring Boot自带的base.xml，这个配置有一个ConsoleAppender和一个FileAppender，
		 FileAppender会把日志文件生成到temp目录(搜索java.io.tmpdir)的spring.log文件中，不是自己想要的配置 -->
	<!-- <include resource="org/springframework/boot/logging/logback/base.xml" /> -->
	
	<property name="PROJECT" value="tool-platform" />
	<property name="LOG_HOME" value="logs/${PROJECT}" />
	
	<!-- 控制台 -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %5level [${PID} %-20.20thread] %-40.40logger{39}: %msg%n</pattern>
			<charset>utf8</charset>
		</encoder>
	</appender>
	
	<!-- 普通日志文件 -->
	<appender name="INFO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<encoder>
			<pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %5level [${PID} %-20.20thread] %-40.40logger{39}: %msg%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/${PROJECT}_%d{yyyy-MM-dd}_%i.info.log</fileNamePattern>
			<maxHistory>30</maxHistory>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
	</appender>
	
	<!-- 调试日志文件 -->
	<appender name="DEBUG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>DEBUG</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<encoder>
			<pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %5level [${PID} %-20.20thread] %-40.40logger{39}: %msg%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/${PROJECT}_%d{yyyy-MM-dd}_%i.debug.log</fileNamePattern>
			<maxHistory>30</maxHistory>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
	</appender>
	
	<!-- 错误日志文件 -->
	<appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<encoder>
			<pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %5level [${PID} %-20.20thread] %-40.40logger{39}: %msg%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/${PROJECT}_%d{yyyy-MM-dd}_%i.error.log</fileNamePattern>
			<maxHistory>30</maxHistory>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
	</appender>
	
	<!-- 整体输出级别 -->
	<root level="INFO">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="INFO_FILE" />
		<appender-ref ref="ERROR_FILE" />
	</root>
	
	<!-- 不同的环境,某些包的日志级别 -->
	<springProfile name="dev,test">
		<logger name="cn.rooomy" level="DEBUG" />
	</springProfile>
	
	<springProfile name="prod">
		<logger name="cn.rooomy" level="WARN" />
	</springProfile>
</configuration>